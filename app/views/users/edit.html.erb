<% provide(:title, 'Edit') %>
<h1>Edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :email %>
      <%= @user.email %><br/>

      <%= f.label :password %>
      <%= f.password_field :password %><br/>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %><br/>

      <%= f.submit "Edit my account", class: "btn btn-primary" %><br/>

      <%= link_to '⚠️Clique pour détruire⚠️', @user, method: :delete %>
    <% end %>
  </div>
</div>